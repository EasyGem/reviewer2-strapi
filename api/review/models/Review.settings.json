{
  "connection": "default",
  "collectionName": "review",
  "info": {
    "name": "review",
    "description": ""
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "author": {
      "type": "string",
      "required": true
    },
    "positive": {
      "type": "boolean"
    },
    "date": {
      "type": "date"
    },
    "content": {
      "type": "text",
      "minLength": 10,
      "required": true,
      "maxLength": 300
    },
    "photos": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "moderated": {
      "required": true,
      "type": "boolean"
    },
    "rate": {
      "type": "integer",
      "max": 5,
      "required": true,
      "min": 1
    },
    "summary": {
      "type": "string"
    },
    "company": {
      "model": "company",
      "via": "reviews"
    }
  }
}